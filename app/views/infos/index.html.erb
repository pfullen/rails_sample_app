<p id="notice"><%= notice %></p>

<h1>Deacons </h1>

<table>
  <thead>
    <tr>
      <th>Last name</th>
      <th>First name</th>
      <th>M.I.</th>
      <th>Phone</th>
      <th>Cell phone</th>
      <th>email </th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @infos.each do |info| %>
      <tr class="<%= cycle('even', 'odd') %>">
        <td><%= info.last_name %></td>
        <td><%= info.first_name %></td>
        <td><%= info.middle_name %></td>
        <td><%= info.phone %></td>
        <td><%= info.cell_phone %></td>
        <td><%= info.user.email %> </td>
        
        <td><%= link_to 'Details', info %></td>
       
        <td><%= link_to 'Delete', info, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


